{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\*.cpp",
                "${workspaceFolder}\\Network\\*.cpp",                   //添加文件夹Network到路径
                "${workspaceFolder}\\FileOperator\\Container\\*.cpp",   //添加文件夹Container到路径
                "${workspaceFolder}\\FileOperator\\Importer\\*.cpp",    //添加文件夹Importer到路径
                "${workspaceFolder}\\FileOperator\\Exporter\\*.cpp",    //添加文件夹Exporter到路径
                "-o",
                "${workspaceFolder}/${workspaceRootFolderName}.exe"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "${workspaceFolder}\\Network\\*.cpp",                   //添加文件夹Network到路径
                "${workspaceFolder}\\FileOperator\\Container\\*.cpp",   //添加文件夹Container到路径
                "${workspaceFolder}\\FileOperator\\Importer\\*.cpp",    //添加文件夹Importer到路径
                "${workspaceFolder}\\FileOperator\\Exporter\\*.cpp",    //添加文件夹Exporter到路径
                "-o",
                "${workspaceFolder}\\${workspaceRootFolderName}.exe"
            ],
            "options": {
                "cwd": "D:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}